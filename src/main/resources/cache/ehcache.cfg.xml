<config xmlns="http://www.ehcache.org/v3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.ehcache.org/v3 https://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache-template name="cache-template">
        <expiry>
            <ttl unit="hours">3</ttl>
        </expiry>
        <resources>
            <offheap unit="MB">10</offheap>
        </resources>
    </cache-template>

    <cache alias="MemberSettingsCache" uses-template="cache-template"/>
    <cache alias="GuildSettingsCache" uses-template="cache-template"/>
    <cache alias="GuildModulesCache" uses-template="cache-template"/>

</config>
